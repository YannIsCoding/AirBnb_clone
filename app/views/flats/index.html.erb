<h1>Listing of all the flats</h1>
<%= link_to 'Add a new flat', new_flat_path  %>
<ul>
  <% @flats.each do |flat| %>
    <li>
      <%= link_to flat.name, flat_path(flat) %>
      <%= cl_image_tag flat.photo, height: 300, width: 400, crop: :fill %>

      <p> <%= flat.description %> </p>
      <p> <%= flat.address %> </p>
      <p> Price <%= flat.price_per_night %> Euro </p>
    </li>
  <% end %>
</ul>
