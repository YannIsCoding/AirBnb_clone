<h1>List of booking for <%= current_user.email %></h1>

<ul>
  <% @bookings.each do |booking| %>
    <li>
      Booking N<%= booking.id %> <br>
      email: <%= booking.user.email %><br>
      Flat:  <%= booking.flat.name %><br>
      start date:  <%= booking.start_date.strftime("%d/%m/%Y") %><br>
      end date: <%= booking.end_date.strftime("%d/%m/%Y") %>  <br>
      <%= link_to 'See details', booking_path(booking)  %>
      <%= link_to 'Leave a review', new_booking_review_path(booking)  %>
    </li>
  <% end %>
</ul>

